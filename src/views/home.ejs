<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../CSS/home.css">
    <%- include('partials/nav-buttons')%>
        <style>
            @keyframes highlight {
                0% {
                    background-color: rgba(255, 255, 0, 0.3);
                }

                100% {
                    background-color: transparent;
                }
            }
        </style>
</head>

<body class="d-flex" data-user-id="<%= user.id_usuario %>" data-user-name="<%= user.nombre %>">

    <%- include('partials/nav-bar')%>

        <div class="flex-grow-1">
            <header class="bg-light p-3 d-flex justify-content-between align-items-center">
                <h1 class="h5 m-0">Inicio</h1>
                <p>Hola <%= user.nombre %>
                </p>
                <div class="d-flex align-items-center gap-2">
                    <input type="text" class="form-control" placeholder="Buscar..." style="max-width: 300px;">
                    <button class="btn btn-outline-secondary">üîç</button>
                </div>
            </header>

            <div class="container-fluid p-4">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-header">Amigos Online</div>
                            <div class="card-body">
                                <ul class="list-group">
                                    <% friends.forEach(friend=>{ %>
                                        <li class="list-group-item" data-id="<%= friend.id_usuario %>"
                                            data-name="<%= friend.nombre %>">
                                            <%= friend.nombre %>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="card">
                                    <div class="card-header">Solicitudes</div>
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <img src="images/perfil.jpg" alt="Foto" class="rounded-circle me-3"
                                                style="width: 50px; height: 50px;">
                                            <div>
                                                <h5 class="mb-1">Mar√≠a L√≥pez</h5>
                                            </div>
                                            <div class="ms-auto">
                                                <button class="btn btn-success btn-sm">Aceptar</button>
                                                <button class="btn btn-danger btn-sm">Rechazar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="card">
                                    <div class="card-header" id="notifications-container">Notificaciones</div>

                                    <% notifications.forEach(noti=>{%>
                                        <div class="card-body">
                                            <p>
                                                <%= noti.emisor %>
                                            </p>
                                            <p>
                                                <%= noti.contenido %>
                                            </p>
                                            <small class="text-muted">
                                                <%= noti.fecha_envio %>
                                            </small>
                                        </div>
                                        <% }) %>

                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="card">
                                    <div class="card-header">Eventos</div>
                                    <div class="card-body">
                                        <p>Reuni√≥n de equipo el viernes.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="card">
                                    <div class="card-header">Tareas</div>
                                    <div class="card-body">
                                        <p>2 tareas pendientes.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <script src="/socket.io/socket.io.js"></script>
        <script type="module" src="/js/home.js"></script>
        <script>
            document.getElementById('logout').addEventListener('click', () => {
                document.cookie = 'jwt=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
                window.location.href = '/login';
            })
        </script>
</body>